{
	"name": "twitch-chat",
	"displayName": "Twitch Chat",
	"description": "Display Twitch chat messages as information boxes",
	"version": "0.0.1",
	"repository": "github:a001379/twitch",
	"engines": {
		"vscode": "^1.65.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "twitch.send-msg",
				"title": "Twitch: Send Chat"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Twitch",
			"properties": {
				"twitch.username": {
					"type": "string",
					"default": "",
					"description": "Twitch username"
				},
				"twitch.oauth": {
					"type": "string",
					"default": "oauth:",
					"markdownDescription": "Twitch OAuth token (must start with `oauth:`)"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.0",
		"@types/node": "14.x",
		"@types/tmi.js": "^1.8.1",
		"@types/vscode": "^1.65.0",
		"@typescript-eslint/eslint-plugin": "^5.12.1",
		"@typescript-eslint/parser": "^5.12.1",
		"@vscode/test-electron": "^2.1.2",
		"eslint": "^8.9.0",
		"glob": "^7.2.0",
		"mocha": "^9.2.1",
		"typescript": "^4.5.5"
	},
	"dependencies": {
		"tmi.js": "^1.8.5"
	}
}
